{
  "name": "@xentri/core-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "^7.0.1",
    "@xentri/ts-schema": "workspace:*",
    "fastify": "^5.6.2",
    "@fastify/cors": "^11.0.0",
    "@fastify/helmet": "^13.0.0",
    "dotenv": "^16.5.0",
    "pg": "^8.16.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.4",
    "prisma": "^7.0.1",
    "testcontainers": "^10.18.0",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3",
    "vitest": "^3.0.0"
  }
}
