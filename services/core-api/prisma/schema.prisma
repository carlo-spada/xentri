// Xentri Core API - Prisma Schema
// Multi-tenant with RLS (Row Level Security)
// All tenant-scoped tables MUST have org_id column

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===================
// Core Identity Tables
// ===================

/// Organization - the tenant boundary
model Organization {
  id        String   @id
  name      String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  members  Member[]
  events   SystemEvent[]
  settings OrgSettings?

  @@map("organizations")
}

/// OrgSettings - per-org configuration (1:1 with Organization)
/// Created during provisioning, stores plan, features, preferences
model OrgSettings {
  id          String   @id @default(uuid())
  orgId       String   @unique @map("org_id")
  plan        String   @default("free") // free, presencia, light_ops, business_in_motion
  features    Json     @default("{}")   // JSONB - feature flags
  preferences Json     @default("{}")   // JSONB - user preferences
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@map("org_settings")
}

/// User - authentication identity (can belong to multiple orgs)
model User {
  id            String   @id
  email         String   @unique
  emailVerified Boolean  @default(false) @map("email_verified")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  memberships Member[]
  preferences UserPreferences?

  @@map("users")
}

/// UserPreferences - per-user settings (theme, notifications)
/// Separate from OrgSettings because theme is per-user, not per-org
model UserPreferences {
  id                 String   @id @default(uuid())
  userId             String   @unique @map("user_id")
  theme              String   @default("dark") // light | dark | system
  emailNotifications Json     @default("{\"lead_created\": true, \"system\": true}") @map("email_notifications")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

/// Member - junction table linking users to organizations with roles
model Member {
  id     String     @id @default(uuid())
  role   MemberRole @default(member)
  orgId  String     @map("org_id")
  userId String     @map("user_id")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@map("members")
}

enum MemberRole {
  owner
  admin
  member

  @@map("member_role")
}

// ===================
// Business Data: Strategy
// ===================

/// Brief - the Universal Brief (business DNA) for an organization
/// MUTABLE: Can be updated, but changes are tracked via events
model Brief {
  id               String   @id @default(uuid())
  orgId            String   @map("org_id")
  userId           String   @map("user_id") // Creator's Clerk ID
  schemaVersion    String   @default("1.0") @map("schema_version")
  sections         Json     @default("{}") // JSONB - 7 sections
  sectionStatus    Json     @default("{}") @map("section_status") // JSONB - status per section
  completionStatus String   @default("draft") @map("completion_status") // draft | complete
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@index([orgId], name: "idx_briefs_org")
  @@map("briefs")
}

// ===================
// Event Backbone
// ===================

/// SystemEvent - append-only event log (the "nervous system")
/// IMMUTABLE: No UPDATE or DELETE allowed per AC3
model SystemEvent {
  id              String   @id @default(uuid())
  eventType       String   @map("event_type") // e.g., xentri.brief.updated.v1
  occurredAt      DateTime @default(now()) @map("occurred_at")
  createdAt       DateTime @default(now()) @map("created_at")
  orgId           String   @map("org_id")
  userId          String?  @map("user_id") // Nullable for system events
  actorType       String   @map("actor_type") // user | system | job
  actorId         String   @map("actor_id")
  payloadSchema   String   @map("payload_schema") // e.g., brief.updated@1.0
  payload         Json
  meta            Json?
  dedupeKey       String?  @map("dedupe_key")
  correlationId   String?  @map("correlation_id")
  traceId         String?  @map("trace_id")
  source          String   @default("unknown") // e.g., core-api, strategy-co-pilot
  envelopeVersion String   @default("1.0") @map("envelope_version")

  // Relations
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId, eventType, occurredAt(sort: Desc)], name: "idx_events_org_type_time")
  @@index([correlationId])
  @@map("system_events")
}
