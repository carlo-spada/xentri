{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "sprint-status",
  "title": "Sprint Status File",
  "description": "Schema for validating sprint-status.yaml files",
  "type": "object",
  "required": ["entity", "generated", "current_sprint"],
  "properties": {
    "entity": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["constitution", "infrastructure_module", "strategic_container", "coordination_unit", "business_module"]
        },
        "path": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "generated": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}(T[0-9]{2}:[0-9]{2}:[0-9]{2}Z)?$",
      "description": "Generation timestamp"
    },
    "current_sprint": {
      "type": "object",
      "properties": {
        "number": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["planning", "in_progress", "review", "complete"]
        }
      }
    },
    "epics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["not_started", "in_progress", "complete", "blocked"]
          },
          "stories": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "status": {
                  "type": "string",
                  "enum": ["todo", "in_progress", "review", "done", "blocked"]
                }
              }
            }
          }
        }
      }
    }
  }
}
