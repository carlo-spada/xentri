{
  "name": "xentri",
  "version": "0.1.0",
  "private": true,
  "description": "Modular Business OS that starts with conversation",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "validate:docs": "node scripts/validation/validate-docs.js",
    "validate:links": "node scripts/validation/validate-links.js",
    "validate:atoms": "npx tsx scripts/validation/validate-atoms.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.0.0",
    "ajv": "^8.17.1",
    "eslint": "^9.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "tsx": "^4.19.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.48.1",
    "yaml": "^2.7.0"
  }
}
