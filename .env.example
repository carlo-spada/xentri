# Xentri Environment Configuration
# Copy this file to .env and customize for your environment

# ===================
# Database (Postgres)
# ===================
POSTGRES_USER=xentri
POSTGRES_PASSWORD=xentri_dev
POSTGRES_DB=xentri
POSTGRES_PORT=5432
DATABASE_URL=postgresql://xentri:xentri_dev@localhost:5432/xentri

# ===================
# Redis
# ===================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ===================
# MinIO (Object Storage)
# ===================
MINIO_ROOT_USER=xentri
MINIO_ROOT_PASSWORD=xentri_dev_secret
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=http://localhost:9000

# ===================
# Core API
# ===================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:4321

# ===================
# Clerk Authentication
# ===================
# Get these from https://dashboard.clerk.com → Your App → API Keys
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key
# Webhook secret from Clerk dashboard → Webhooks
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===================
# Shell (Astro)
# ===================
PUBLIC_API_URL=http://localhost:3000
PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
