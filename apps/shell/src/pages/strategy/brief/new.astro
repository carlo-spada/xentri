---
import AppShell from '../../../layouts/AppShell.astro';
import { BriefForm } from '../../../components/strategy/BriefForm';

const { auth } = Astro.locals as { auth: () => Promise<{ orgId?: string }> };
const { orgId } = (await auth()) || {};
if (!orgId) {
  return Astro.redirect('/sign-in');
}
---

<AppShell title="Create Brief">
  <div class="brief-create-page">
    <BriefForm
      client:only="react"
      orgId={orgId}
    />
  </div>
</AppShell>

<style>
  .brief-create-page {
    max-width: 960px;
    margin: 0 auto;
    padding: 1rem;
  }
</style>
