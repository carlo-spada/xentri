---
import UserMenu from './UserMenu.tsx';
import NotificationBell from './NotificationBell.tsx';
import MobileMenuButton from './MobileMenuButton.tsx';
---

<header class="shell-header">
  <div class="header-left">
    <!-- Mobile menu button (visible <768px) -->
    <div class="mobile-menu-button">
      <MobileMenuButton client:only="react" />
    </div>

    <!-- Brand -->
    <a href="/" class="brand" data-astro-prefetch="hover">
      <span class="logo-dot" aria-hidden="true"></span>
      <span class="brand-name">Xentri</span>
    </a>
  </div>

  <div class="header-right">
    <!-- Notification Bell -->
    <NotificationBell client:only="react" />

    <!-- User Menu (with theme toggle) -->
    <UserMenu client:only="react" />
  </div>
</header>

<style>
  .header-left {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .mobile-menu-button {
    display: none;
  }

  @media (max-width: 767px) {
    .mobile-menu-button {
      display: flex;
    }
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.01em;
    color: var(--color-text-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .brand:hover {
    opacity: 0.9;
    text-decoration: none;
  }

  .logo-dot {
    width: 10px;
    height: 10px;
    border-radius: 9999px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    display: inline-block;
  }

  .brand-name {
    font-size: 1.125rem;
  }
</style>
